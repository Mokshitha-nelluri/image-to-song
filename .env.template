# Environment variables for Image-to-Song API
# Copy this file to .env and fill in your actual values

# Basic API Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8002
LOG_LEVEL=INFO

# AI Model Configuration  
MODEL_CACHE_DIR=./models
USE_GPU=False
MAX_BATCH_SIZE=2

# Image Processing
MAX_IMAGE_SIZE=10485760
TARGET_IMAGE_SIZE=(384, 384)

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# Cache Settings
CAPTION_CACHE_TTL=86400

# Performance Settings
MAX_WORKERS=2
REQUEST_TIMEOUT=30

# Spotify API Configuration
# Get these from: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8002/spotify/callback

# Instructions to get Spotify credentials:
# 1. Go to https://developer.spotify.com/dashboard/applications
# 2. Log in with your Spotify account
# 3. Click "Create an App"
# 4. Fill in app name and description
# 5. Copy Client ID and Client Secret to this file
# 6. In app settings, add the redirect URI: http://localhost:8002/spotify/callback
